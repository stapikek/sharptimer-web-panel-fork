Options -Indexes
ErrorDocument 404 /404.php

# Ensure PHP passes through existing files
<IfModule mod_rewrite.c>
  RewriteEngine On
  # Do not rewrite existing files or directories
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Otherwise, let the request go as-is (no routing rules added)
</IfModule>
<IfModule mod_rewrite.c>
    RewriteEngine On
    DirectoryIndex index.php

    # Внутренняя подмена: /path -> /path.php (если файл существует)
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME}\.php -f
    RewriteRule ^(.+)$ $1.php [L,QSA]

    # 404 для несуществующих страниц (только если не файл и не директория и нет .php)
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME}\.php !-f
    RewriteRule ^.*$ 404.php [L]
</IfModule>

# Обработка 404 ошибок
ErrorDocument 404 /404.php
